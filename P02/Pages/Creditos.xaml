<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P02.Pages.Creditos"
             Title="Creditos">
    <StackLayout Style="{StaticResource Container}">
        <ScrollView VerticalOptions="FillAndExpand">

            <FlexLayout Direction="Column"  JustifyContent="Start" AlignItems="Center">

                <FlexLayout HeightRequest="50" Direction="Row" AlignItems="Center" JustifyContent="Center"
                         Margin="0, 0, 0, 50">
                    <Label Text="Creditos" FontAttributes="Bold" FontSize="Large"/>
                </FlexLayout>

                <FlexLayout HeightRequest="80" Direction="Row" AlignItems="Stretch" JustifyContent="Start" >
                    <Label Text="Desenvolvido por Gabriel Silva Resende Chaves e Caroline Ribeiro dos Santos" FontAttributes="Bold" FontSize="Subtitle" Margin="0, 0, 5, 0"/>
                </FlexLayout>
            </FlexLayout>
        </ScrollView>

        <Button
         Style="{StaticResource BtnOutline}"
         Margin="0, 20, 0, 0"
         Text="Voltar"
         Clicked="OnBack"/>
    </StackLayout>
</ContentPage>